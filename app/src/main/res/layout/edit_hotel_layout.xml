<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F4F6FA">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Nút quay lại -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_circle_button"
            android:padding="8dp"
            android:src="@android:drawable/ic_media_previous"
            app:tint="#0C6FEF"
            android:contentDescription="Back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Chỉnh sửa Khách sạn"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/btnBack"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Ảnh đại diện khách sạn -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardHotelImage"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:layout_constraintTop_toBottomOf="@id/tvHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/imgHotel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Hotel Image"
                android:background="#EAEAEA" />
        </androidx.cardview.widget.CardView>

        <!-- Nút chọn ảnh -->
        <Button
            android:id="@+id/btnChangeImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Thay đổi ảnh"
            android:textAllCaps="false"
            android:background="@drawable/bg_admin_button"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toBottomOf="@id/cardHotelImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tiêu đề danh sách ảnh hiện có -->
        <TextView
            android:id="@+id/tvCurrentImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Ảnh hiện có"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toBottomOf="@id/btnChangeImage"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Danh sách ảnh hiện có -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCurrentImages"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="4dp"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/tvCurrentImages"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="3" />

        <!-- Ô nhập tên khách sạn -->
        <EditText
            android:id="@+id/edtHotelName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="Tên khách sạn"
            android:padding="14dp"
            android:background="@drawable/bg_edittext"
            android:textColor="#333333"
            android:textSize="16sp"
            android:inputType="textCapWords"
            app:layout_constraintTop_toBottomOf="@id/rvCurrentImages"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Header tiện ích -->
        <LinearLayout
            android:id="@+id/facilityHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/edtHotelName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvFacilitiesTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chọn tiện ích khách sạn"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#111111" />

            <ImageButton
                android:id="@+id/btnAddFacility"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_circle_button"
                android:src="@android:drawable/ic_input_add"
                android:tint="#0C6FEF"
                android:contentDescription="Thêm tiện ích" />
        </LinearLayout>

        <!-- Danh sách tiện ích -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFacilities"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="4dp"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/facilityHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2" />

        <!-- Nút lưu -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:text="Lưu thay đổi"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins_medium"
            android:background="@drawable/bg_admin_button"
            app:layout_constraintTop_toBottomOf="@id/rvFacilities"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
