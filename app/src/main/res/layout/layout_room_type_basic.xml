<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/layout_basic">

    <TextView
        android:id="@+id/tvNameTypeBasic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Standart Room"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingVertical="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <include
                    android:id="@+id/area_basic"
                    layout="@layout/item_facility"
                    />
                <include
                    android:id="@+id/view_basic"
                    layout="@layout/item_facility"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/gridFacilities_basic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/lbFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="from"
                    android:textColor="#80000000"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"/>

                <TextView
                    android:id="@+id/tvPriceBasic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VND 700.000"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/btnReverveBasic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_foreground_radius"
            android:text="Reserve"
            android:textAllCaps="false"
            android:textColor="@color/green"
            android:paddingVertical="18dp"
            android:paddingHorizontal="10dp"
            />

    </LinearLayout>


</LinearLayout>