<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#000">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/arrow_left"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="#F77F00"
        android:textSize="16sp"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vui lòng xác nhận email để đổi mật khẩu"
        android:textColor="#AAA"
        android:textSize="14sp"
        android:layout_marginBottom="30dp" />

    <Button
        android:id="@+id/btnVerifyDone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Đã xác minh ✅"
        android:backgroundTint="#F77F00"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/btnResendEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gửi lại email"
        android:textColor="#FFF"
        android:layout_gravity="center"
        android:layout_marginTop="20dp" />
</LinearLayout>
