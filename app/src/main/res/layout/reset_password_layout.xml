<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#000"
    android:gravity="center_horizontal">

    <!-- Nút quay lại -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="start"
        android:layout_marginBottom="24dp"
        android:src="@drawable/arrow_left"
        android:contentDescription="Back button" />

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đặt lại mật khẩu"
        android:textColor="#F77F00"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- Email -->
    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email@example.com"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <!-- Thông báo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vui lòng kiểm tra email để đặt lại mật khẩu mới."
        android:textColor="#AAA"
        android:textSize="14sp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:textAlignment="center" />

    <!-- Hiệu ứng loading -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:indeterminate="true"
        android:layout_marginBottom="24dp"
        android:indeterminateTint="#F77F00" />

    <!-- Trạng thái -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đang chờ bạn xác minh email..."
        android:textColor="#FFF"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:textAlignment="center" />

    <!-- Gợi ý -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sau khi đổi mật khẩu qua email, hãy quay lại ứng dụng để đăng nhập."
        android:textColor="#888"
        android:textSize="13sp"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        android:paddingHorizontal="12dp" />

    <!-- Gửi lại email -->
    <TextView
        android:id="@+id/btnResendEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gửi lại email"
        android:textColor="#F77F00"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_gravity="center" />

</LinearLayout>
