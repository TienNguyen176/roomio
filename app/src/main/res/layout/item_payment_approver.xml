<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardPayment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        app:cardUseCompatPadding="true"
        android:padding="12dp"
        app:cardBackgroundColor="@color/white"
        app:strokeColor="@color/gray"
        app:strokeWidth="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Booking ID + Edit button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvBookingId"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="ID: 1005"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000"/>

                <ImageView
                    android:id="@+id/btnEdit"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_edit_24"
                    android:backgroundTint="#FF9800"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </LinearLayout>

            <!-- CheckIn -->
            <TextView
                android:id="@+id/tvCheckInDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CheckIn: 17 Jun 11:00"
                android:textSize="14sp"
                android:textColor="#444"
                android:layout_marginTop="6dp"/>

            <!-- CheckOut -->
            <TextView
                android:id="@+id/tvCheckOutDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CheckOut: 17 Jun 11:00"
                android:textSize="14sp"
                android:textColor="#444"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvNgayThanhToan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày thanh toán: 17/06/2025 10:30"
                android:textSize="14sp"
                android:textColor="#444"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvTotalPaidAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số tiền đã thanh toán: 1.000.000"
                android:textSize="14sp"
                android:textColor="#444"
                android:layout_marginTop="2dp"/>

            <!-- Status (căn phải) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="end">

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_payment_status_default"
                    android:paddingStart="10dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="4dp"
                    android:text="Pending"
                    android:textColor="@color/black"
                    android:textSize="13sp"/>
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
