<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <include
        android:id="@+id/appbar"
        layout="@layout/app_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="26dp">

        <LinearLayout
            android:id="@+id/lnServiceHotelManager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:background="@drawable/button_border"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/imgServiceHotelManager"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_service_hotel_manager"
                android:contentDescription="Button Icon"
                android:layout_gravity="start"/>

            <TextView
                android:id="@+id/tvServiceHotelManager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Manager"
                android:textColor="@color/primaryText"
                android:textSize="23sp"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnFacilityManager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:background="@drawable/button_border"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/imgFacilityManager"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_facibilites_manager"
                android:contentDescription="Button Icon"
                android:layout_gravity="start"/>

            <TextView
                android:id="@+id/tvFacilityManager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facilities Manager"
                android:textColor="@color/primaryText"
                android:textSize="23sp"
                android:layout_marginStart="12dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>