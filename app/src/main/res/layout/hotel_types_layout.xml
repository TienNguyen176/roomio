<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollViewMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FA"
    android:fillViewport="true"
    tools:context=".activities.admin.HotelTypesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- App Bar -->
        <include
            android:id="@+id/appbar"
            layout="@layout/app_bar" />

        <!-- Card chứa Form nhập thông tin HotelType -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvFormTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quản lý Loại Hình Khách Sạn"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="12dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tên loại hình"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtHotelTypeName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mô tả"
                    app:boxBackgroundMode="outline"
                    android:layout_marginTop="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtHotelTypeDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:lines="2"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Các nút hành động -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:weightSum="3">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddType"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Thêm"
                        android:textAllCaps="false"
                        app:icon="@drawable/ic_add_24"
                        android:paddingStart="6dp"
                        app:iconPadding="6dp"
                        app:iconGravity="textStart"
                        tools:ignore="RtlSymmetry" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnUpdateType"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Sửa"
                        android:backgroundTint="#FF9800"
                        android:textAllCaps="false"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        app:icon="@drawable/ic_edit_24"
                        android:paddingStart="6dp"
                        app:iconPadding="6dp"
                        app:iconGravity="textStart"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDeleteType"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Xóa"
                        android:backgroundTint="@color/red"
                        android:textAllCaps="false"
                        app:icon="@drawable/ic_delete_24"
                        app:iconTint="@color/white"
                        android:paddingStart="6dp"
                        app:iconPadding="6dp"
                        app:iconGravity="textStart"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Danh sách các hotelType -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvListHotelTypes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/item_hotel_types_admin" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
