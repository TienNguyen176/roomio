<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TITLE -->
        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm mã giảm giá"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/onSurface"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        <!-- NAME -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên mã giảm giá"
            android:inputType="text"
            android:padding="12dp"
            android:background="@drawable/bg_input"
            android:layout_marginTop="8dp"/>

        <!-- DESCRIPTION -->
        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:padding="12dp"
            android:background="@drawable/bg_input"
            android:layout_marginTop="12dp"/>

        <!-- PERCENT -->
        <EditText
            android:id="@+id/etPercent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phần trăm giảm (%)"
            android:inputType="number"
            android:padding="12dp"
            android:background="@drawable/bg_input"
            android:layout_marginTop="12dp"/>

        <!-- MAX DISCOUNT -->
        <EditText
            android:id="@+id/etMaxDiscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giảm tối đa (VND)"
            android:inputType="number"
            android:padding="12dp"
            android:background="@drawable/bg_input"
            android:layout_marginTop="12dp"/>

        <!-- MIN ORDER -->
        <EditText
            android:id="@+id/etMinOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Đơn tối thiểu (VND)"
            android:inputType="number"
            android:padding="12dp"
            android:background="@drawable/bg_input"
            android:layout_marginTop="12dp"/>

        <!-- TYPE LABEL -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại mã giảm giá"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/onSurface"/>

        <!-- TYPE -->
        <RadioGroup
            android:id="@+id/rgType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/rbInfinite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vô hạn"
                android:fontFamily="@font/poppins_regular"/>

            <RadioButton
                android:id="@+id/rbLimited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hữu hạn"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/poppins_regular"/>
        </RadioGroup>

        <!-- DAILY RESET -->
        <EditText
            android:id="@+id/etDailyReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số lượng reset mỗi ngày"
            android:inputType="number"
            android:padding="12dp"
            android:background="@drawable/bg_input"
            android:layout_marginTop="12dp"
            android:visibility="gone"/>

        <!-- AVAILABLE COUNT -->
        <EditText
            android:id="@+id/etAvailableCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số lượng mã hiện có"
            android:inputType="number"
            android:padding="12dp"
            android:background="@drawable/bg_input"
            android:layout_marginTop="12dp"/>

        <!-- SAVE BUTTON -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Lưu"
            android:layout_marginTop="24dp"
            style="@style/Widget.Roomio.Button.Filled"/>

    </LinearLayout>
</ScrollView>
