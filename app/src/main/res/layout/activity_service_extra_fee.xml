<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/tvScreenTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Roomio"
            android:textAlignment="center"
            android:textColor="#4D4D98"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvResId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Reservation ID: -"
        android:textColor="#222222"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvGuestName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guest name: -"
        android:textColor="#222222"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvCheckIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check-in: -"
        android:textColor="#222222"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvCheckOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check-out: -"
        android:textColor="#222222"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvReservationAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Reservation amount: 0VND"
        android:textColor="#164B8A"
        android:textSize="15sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tvPaidAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Paid amount: 0VND"
        android:textColor="#164B8A"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvCleaningFee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Cleaning inspection fee: 0VND"
        android:textColor="#164B8A"
        android:textSize="15sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvExtraHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Extra fee:"
        android:textColor="#222222"
        android:textSize="15sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvServices"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1" />
    <TextView
        android:id="@+id/tvExtraFee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total additional charges: 0VND"
        android:textColor="#222222"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="#E0E0E0" />

    <TextView
        android:id="@+id/tvGrandTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Total amount: 0VND"
        android:textColor="#D32F2F"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Next"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:backgroundTint="#2D6C8C"
        app:cornerRadius="24dp" />

</LinearLayout>
