<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"> <ImageButton
    android:id="@+id/btnBack"
    android:layout_width="36dp"
    android:layout_height="36dp"
    android:contentDescription="@string/abc_action_bar_up_description"
    android:src="@android:drawable/ic_menu_revert"
    android:background="?attr/selectableItemBackgroundBorderless"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginStart="12dp"
    android:layout_marginTop="8dp"
    app:tint="?attr/colorOnSurface"/> <TextView
    android:id="@+id/tvTitle"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Roomio"
    android:textSize="24sp"
    android:textColor="#0C6FEF"
    android:textStyle="italic"
    android:fontFamily="sans-serif-medium"
    android:gravity="center"
    app:layout_constraintStart_toEndOf="@id/btnBack"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@id/btnBack"
    app:layout_constraintBottom_toBottomOf="@id/btnBack" android:layout_marginEnd="12dp"/>

    <LinearLayout
        android:id="@+id/actionBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <HorizontalScrollView
        android:id="@+id/hsFloors"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/actionBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioGroup
            android:id="@+id/rgFloors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"/>
    </HorizontalScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnConfirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content" android:text="Confirm"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:id="@+id/legendContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="12dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/btnConfirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.chip.Chip
            style="@style/Widget.Material3.Chip.Suggestion"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Occupied"
            android:textAlignment="center"
            android:layout_marginEnd="6dp"
            app:chipBackgroundColor="?attr/colorErrorContainer"
            android:textColor="?attr/colorOnErrorContainer"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.Material3.Chip.Suggestion" android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Available"
            android:textAlignment="center"
            android:layout_marginEnd="6dp"
            app:chipBackgroundColor="?attr/colorSurfaceVariant"
            android:textColor="?attr/colorOnSurfaceVariant"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.Material3.Chip.Suggestion"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:textAlignment="center"
            android:layout_marginEnd="6dp"
            app:chipBackgroundColor="?attr/colorTertiaryContainer"
            android:textColor="?attr/colorOnTertiaryContainer"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.Material3.Chip.Suggestion"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Fixed"
            android:textAlignment="center"
            app:chipBackgroundColor="?attr/colorPrimaryContainer"
            android:textColor="?attr/colorOnPrimaryContainer"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRooms"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/hsFloors"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/legendContainer"/>

</androidx.constraintlayout.widget.ConstraintLayout>