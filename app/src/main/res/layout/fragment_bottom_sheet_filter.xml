<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_border"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_close" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Filter"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/btnReset"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="Reset"
                android:textStyle="bold"
                android:textColor="#1A73E8"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Price range -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Price range"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <!-- LinearLayout cho giá thấp nhất -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_border"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp">


                <EditText
                    android:id="@+id/edtMinPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="0"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:inputType="number"
                    android:gravity="end" />
            </LinearLayout>


            <!-- LinearLayout cho giá cao nhất -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_border"
                android:layout_marginEnd="20dp">
                <EditText
                    android:id="@+id/edtMaxPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:hint="10,000,0000đ"
                    android:inputType="number"
                    android:gravity="end" />
            </LinearLayout>

        </LinearLayout>

        <!-- Range Slider -->
        <com.mohammedalaa.seekbar.DoubleValueSeekBarView
            android:id="@+id/doubleRangeSeekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:r2CurrentMinValue="1000000"
            app:r2CurrentMaxValue="10000000"
            app:r2minValue="1000000"
            app:r2maxValue="10000000"
            app:r2minValueStep="100"
            app:r2maxValueStep="100"
            app:r2barHeight="5dp"
            app:r2baseColor="@color/navy"
            app:r2fillColor="@color/blue"
            app:r2circleRadius="10dp"
            app:r2circleFillColor="@color/blue"/>

        <!-- Review Score -->
        <TextView
            android:text="Review score"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/reviewStars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:weightSum="5">

            <ImageView
                android:id="@+id/star1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="6dp"
                android:src="@drawable/ic_star" />

            <ImageView
                android:id="@+id/star2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="6dp"
                android:src="@drawable/ic_star" />

            <ImageView
                android:id="@+id/star3"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="6dp"
                android:src="@drawable/ic_star" />

            <ImageView
                android:id="@+id/star4"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="6dp"
                android:src="@drawable/ic_star_half" />

            <ImageView
                android:id="@+id/star5"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:padding="6dp"
                android:src="@drawable/ic_star_half" />
        </LinearLayout>



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Dịch vụ"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDichVu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="4dp"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2" />
        </LinearLayout>
