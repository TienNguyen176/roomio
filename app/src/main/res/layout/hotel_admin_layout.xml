<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/backgroundLight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="24dp"
        android:paddingBottom="50dp">

        <!-- EXIT ROW -->
        <LinearLayout
            android:id="@+id/rowExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivExit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/onSurface" />

            <TextView
                android:id="@+id/tvExit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="Thoát"
                android:textSize="16sp"
                android:textColor="@color/onSurface"
                android:fontFamily="@font/poppins_medium" />
        </LinearLayout>


        <!-- LOGO / TITLE -->
        <TextView
            android:id="@+id/tvSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Hotel Admin"
            android:textColor="#777777"
            android:textSize="14sp"
            android:gravity="center"
            android:fontFamily="@font/poppins_regular" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="roomio"
            android:textColor="#0C6FEF"
            android:textSize="32sp"
            android:textStyle="italic"
            android:gravity="center"
            android:fontFamily="sans-serif-medium" />


        <!-- SELECT HOTEL -->
        <TextView
            android:id="@+id/tvHotelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="[Chạm để chọn khách sạn]"
            android:textColor="@color/onSurface"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:background="@drawable/bg_chip_select"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" />



        <!-- CARD 1 - HOTEL MANAGEMENT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:padding="20dp"
            android:background="@drawable/bg_card_rounded_modern">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quản lý khách sạn"
                android:textSize="15sp"
                android:textColor="@color/onSurface"
                android:fontFamily="@font/poppins_semibold"
                android:paddingBottom="14dp" />

            <Button
                android:id="@+id/btnRoomManagement"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Quản lý phòng"
                style="@style/Widget.Roomio.Button.Filled" />

            <Button
                android:id="@+id/btnMinibar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Minibar"
                android:layout_marginTop="14dp"
                style="@style/Widget.Roomio.Button.Filled" />

            <Button
                android:id="@+id/btnDiscount"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Mã giảm giá"
                android:layout_marginTop="14dp"
                style="@style/Widget.Roomio.Button.Filled" />

            <Button
                android:id="@+id/btnRating"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Đánh giá"
                android:layout_marginTop="14dp"
                style="@style/Widget.Roomio.Button.Filled" />
        </LinearLayout>


        <!-- CARD 2 - SYSTEM -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:padding="20dp"
            android:background="@drawable/bg_card_rounded_modern">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hệ thống"
                android:textSize="15sp"
                android:textColor="@color/onSurface"
                android:fontFamily="@font/poppins_semibold"
                android:paddingBottom="14dp" />

            <Button
                android:id="@+id/btnEditHotel"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Chỉnh sửa khách sạn"
                style="@style/Widget.Roomio.Button.Filled" />

            <Button
                android:id="@+id/btnRoleManager"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Quản lý quyền"
                android:layout_marginTop="14dp"
                style="@style/Widget.Roomio.Button.Filled" />

            <Button
                android:id="@+id/btnViewBooking"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Xem đặt phòng"
                android:layout_marginTop="14dp"
                style="@style/Widget.Roomio.Button.Filled" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
