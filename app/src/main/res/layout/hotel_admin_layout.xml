<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/backgroundLight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="20dp"
        android:paddingTop="24dp"
        android:paddingBottom="40dp">

        <!-- EXIT -->
        <LinearLayout
            android:id="@+id/rowExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/ivExit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/onSurface"
                android:contentDescription="@string/exit" />

            <TextView
                android:id="@+id/tvExit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="@string/tho_t"
                android:textColor="@color/onSurface"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_medium" />
        </LinearLayout>

        <!-- SUBTITLE -->
        <TextView
            android:id="@+id/tvSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/hotel_admin"
            android:textColor="#777777"
            android:textSize="14sp"
            android:gravity="center"
            android:fontFamily="@font/poppins_regular" />
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/roomio"
            android:textColor="#0C6FEF"
            android:textSize="28sp"
            android:textStyle="italic"
            android:fontFamily="sans-serif-medium"
            android:gravity="center" />

        <!-- HOTEL NAME SELECT -->
        <TextView
            android:id="@+id/tvHotelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/ch_m_ch_n_kh_ch_s_n"
            android:textColor="@color/onSurface"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:background="@drawable/bg_chip_select"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- BUTTONS -->
        <Button
            android:id="@+id/btnRoomManagement"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:text="@string/qu_n_l_ph_ng"
            style="@style/Widget.Roomio.Button.Filled" />

        <Button
            android:id="@+id/btnInvoiceManagement"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:text="@string/qu_n_l_h_a_n"
            style="@style/Widget.Roomio.Button.Filled" />

        <Button
            android:id="@+id/btnRating"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:text="@string/m_gi_m_gi"
            style="@style/Widget.Roomio.Button.Filled" />

        <Button
            android:id="@+id/btnEditHotel"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:text="Chỉnh sửa khách sạn"
            style="@style/Widget.Roomio.Button.Filled" />

        <Button
            android:id="@+id/btnRoleManager"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:text="@string/xem_nh_gi"
            style="@style/Widget.Roomio.Button.Filled" />

        <Button
            android:id="@+id/btnViewBooking"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:text="@string/xem_t_ph_ng"
            style="@style/Widget.Roomio.Button.Filled" />

    </LinearLayout>
</ScrollView>
