<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="24dp"
        android:background="@drawable/screenshot_3">

        <LinearLayout
            android:id="@+id/rowExit"
            android:layout_width="match_parent"  android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/ivExit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/group_1327"
                android:contentDescription="exit"
                app:tint="?attr/colorOnBackground" />

            <TextView
                android:id="@+id/tvExit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="exit"
                android:textAppearance="@android:style/TextAppearance.Medium"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvSubTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="hotel_admin"
            android:gravity="center"
            android:alpha="0.75"
            android:textColor="@color/black"
            android:textAppearance="@android:style/TextAppearance.Small"
            app:layout_constraintTop_toBottomOf="@id/rowExit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="roomio"
            android:textSize="28sp"
            android:textStyle="italic"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textColor="#0C6FEF"
            app:layout_constraintTop_toBottomOf="@id/tvSubTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvHotelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="[Chạm để chọn Khách sạn]"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:background="@drawable/bg_admin_item"
            android:backgroundTint="#FFDDDD"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/btnRoomManagement"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:text="room_management"
            android:textAllCaps="false"
            android:background="@drawable/bg_admin_item"
            android:backgroundTint="#D0D0D0"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvHotelName"
            app:layout_constraintBottom_toTopOf="@id/btnInvoiceManagement"
            app:layout_constraintVertical_chainStyle="spread_inside" />

        <Button
            android:id="@+id/btnInvoiceManagement"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="invoice_management"
            android:textAllCaps="false"
            android:background="@drawable/bg_admin_item"
            android:gravity="center"
            android:backgroundTint="#D0D0D0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnRoomManagement"
            app:layout_constraintBottom_toTopOf="@id/btnRating" />

        <Button
            android:id="@+id/btnRating"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="rating"
            android:textAllCaps="false"
            android:background="@drawable/bg_admin_item"
            android:gravity="center"
            android:backgroundTint="#D0D0D0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnInvoiceManagement"
            app:layout_constraintBottom_toTopOf="@id/btnEditHotel" />

        <Button
            android:id="@+id/btnEditHotel"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="edit_hotel"
            android:textAllCaps="false"
            android:background="@drawable/bg_admin_item"
            android:gravity="center"
            android:backgroundTint="#D0D0D0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnRating"
            app:layout_constraintBottom_toTopOf="@id/btnRoleManager" />

        <Button
            android:id="@+id/btnRoleManager"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="role_manager"
            android:textAllCaps="false"
            app:backgroundTint="#D0D0D0"  android:background="@drawable/bg_admin_item"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnEditHotel"
            app:layout_constraintBottom_toTopOf="@id/btnViewBooking" />
        <Button
            android:id="@+id/btnViewBooking"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:backgroundTint="#D0D0D0"
            android:text="view_booking"
            android:textAllCaps="false"
            android:background="@drawable/bg_admin_item"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnRoleManager"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>