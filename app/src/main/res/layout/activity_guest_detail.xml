<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.booking.GuestDetailActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            />
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/layoutHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
                android:divider="@color/black"
                android:paddingHorizontal="15sp">
                <TextView
                    android:id="@+id/tvHotelName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:text="Ares Home"/>
                <LinearLayout
                    android:id="@+id/rating_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toBottomOf="@id/tvHotelName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/ratingBarStyleSmall"
                        android:numStars="5"
                        android:rating="4.5"
                        android:stepSize="0.5"
                        android:isIndicator="true"
                        android:theme="@style/RatingBarColor"/>
                    <TextView
                        android:id="@+id/tvReviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24 reviews"
                        android:textSize="14sp"
                        android:layout_marginStart="8sp"
                        android:textColor="@android:color/darker_gray"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="165A Thuy Van Street, Thang Tam Ward, Vung Tau"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/lineHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_line"
                app:layout_constraintTop_toBottomOf="@+id/layoutHeader"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/lineHeader"
                android:divider="@color/black"
                android:paddingHorizontal="15sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You selected"
                    android:textSize="15sp"
                    android:textColor="#80000000"/>
                <TextView
                    android:id="@+id/tvRoomType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Standard room"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/lbGuest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Guest: "
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tvGuest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 people"
                        android:textSize="14sp"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/lbCheckIn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Check-in"
                            android:textSize="15sp"
                            android:textColor="#80000000" />
                        <TextView
                            android:id="@+id/tvCheckIn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mon 6 Oct 2025"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/lbCheckOut"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Check-out"
                            android:textSize="15sp"
                            android:textColor="#80000000" />
                        <TextView
                            android:id="@+id/tvCheckOut"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mon 6 Oct 2025"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_line_3"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/lbTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total: "
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tvTotalOrigin"
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="VND 700.000"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:gravity="right"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/lbFee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(Including 10% VAT and Fees)"
                    android:textSize="13sp"
                    android:textColor="#80000000"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:id="@+id/layoutTotalFinal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/tvDiscountName"
                        android:layout_weight="3"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text="3% discount for first time booking with e-wallet"
                        android:textSize="11sp"
                        android:textColor="@color/green"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/tvDiscountPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="- VND 21.000"
                            android:textSize="13sp"
                            android:textColor="@color/red"
                            android:textStyle="bold"
                            android:gravity="right"/>
                        <TextView
                            android:id="@+id/tvTotalAfter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="VND 700.000"
                            android:textSize="17sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:gravity="right"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:layout_marginTop="10sp">

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/lbFundAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fund Amount"
                            android:textSize="15sp"
                            android:textColor="@color/black"

                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/lbDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="(Pay in advance to hold the room)"
                            android:textSize="12sp"
                            android:textColor="#80000000"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/groupFundAmount"
                        android:layout_width="0sp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/radFund10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="10%" />

                        <RadioButton
                            android:id="@+id/radFund100"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Full payment"
                            android:checked="true"/>
                    </RadioGroup>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_line_3"/>
                <TextView
                    android:id="@+id/lbPaymentMethod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment method"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerPaymentMethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_payment_method">
                </androidx.recyclerview.widget.RecyclerView>

                <TextView
                    android:id="@+id/lbHeaderSpecialRequest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Special Request"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/lbSpecialRequestDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Special requests cannot be guaranteed â€“ but the property will do its best to meet your needs."
                    android:textSize="11sp"
                    android:textColor="#80000000"/>
                <TextView
                    android:id="@+id/lbRequest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please write your requests. (optional)"
                    android:textSize="13sp"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/tvRequest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your special request"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:minHeight="48dp"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment of deposit"
        android:backgroundTint="#0090FF"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:layout_margin="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="10sp"
        android:gravity="center"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:indeterminateTint="?attr/colorPrimary"
        style="?android:attr/progressBarStyleLarge" />
</androidx.constraintlayout.widget.ConstraintLayout>