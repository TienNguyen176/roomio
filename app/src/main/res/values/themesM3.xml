<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base theme Material 3 của bạn -->
    <style name="Base.Theme.Roomio.M3" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Bo góc mặc định -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Roomio.M3.Medium</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Roomio.M3.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Roomio.M3.Medium</item>
    </style>

    <!-- Theme chính dùng M3 -->
    <style name="Theme.Roomio.M3" parent="Base.Theme.Roomio.M3" />

    <!-- Bo góc 14dp (Material 3 version) -->
    <style name="ShapeAppearance.Roomio.M3.Medium" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">14dp</item>
    </style>

    <!-- Button Filled M3 -->
    <style name="Widget.Roomio.M3.Button.Filled" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/bg_admin_button</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Button Tonal M3 -->
    <style name="Widget.Roomio.M3.Button.Tonal" parent="Widget.Material3.Button">
        <item name="backgroundTint">?attr/colorPrimaryContainer</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="rippleColor">?attr/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- Chip Select (TextView giả dạng Chip) -->
    <style name="Widget.Roomio.M3.Chip.Select" parent="">
        <item name="android:background">@drawable/bg_chip_select</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Outlined Button -->
    <style name="Widget.Roomio.M3.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="strokeColor">?attr/colorOutline</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>
