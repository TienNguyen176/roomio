<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme (đã đúng Material3) -->
    <style name="Base.Theme.Roomio" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Nếu muốn bo góc mặc định toàn app -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Roomio.Medium</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Roomio.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Roomio.Medium</item>

        <!-- Có thể tinh chỉnh typography tại đây nếu cần -->
        <!-- <item name="textAppearanceTitleLarge">@style/TextAppearance.Material3.TitleLarge</item> -->
    </style>

    <style name="Theme.Roomio" parent="Base.Theme.Roomio" />

    <!-- Bo góc 14dp mềm, áp cho các component nhỏ/trung bình -->
    <style name="ShapeAppearance.Roomio.Medium" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">14dp</item>
    </style>

    <!-- Button Filled theo Material3, dùng màu theme (tự đổi Light/Dark) -->
    <style name="Widget.Roomio.Button.Filled" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/bg_admin_button</item>
        <item name="backgroundTint">@null</item> <!-- Quan trọng -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Button Tonal (mềm hơn), phòng khi bạn muốn đổi style nhanh -->
    <style name="Widget.Roomio.Button.Tonal" parent="Widget.Material3.Button">
        <item name="backgroundTint">?attr/colorPrimaryContainer</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="rippleColor">?attr/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:elevation">0dp</item>
    </style>



    <!-- “Chip” chọn khách sạn: thực chất là TextView với drawable dùng màu theme -->
    <style name="Widget.Roomio.Chip.Select" parent="">
        <item name="android:background">@drawable/bg_chip_select</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Hàng nút admin (nếu muốn dùng dạng Outlined) -->
    <style name="Widget.Roomio.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="strokeColor">?attr/colorOutline</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>
