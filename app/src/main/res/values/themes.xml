<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Roomio" parent="Theme.MaterialComponents.DayNight.NoActionBar"/>
    <style name="Theme.Roomio" parent="Base.Theme.Roomio" />

    <style name="ButtonsFilled" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RatingBarColor" parent="Theme.Roomio" >
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>


    <style name="ButtonsText" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="CustomThemeOverlay_MaterialCalendar_Fullscreen" parent="ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen">

        <item name="materialCalendarStyle">@style/Custom_MaterialCalendar_Range</item>

        <item name="colorPrimary">@color/gray</item>
        <item name="colorSurface">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="materialCalendarHeaderTitle">@style/CenteredHeaderTitleStyle</item>
        <item name="materialCalendarHeaderSelection">@style/CenteredSelectionStyle</item>
        <item name="materialCalendarMonth">@style/CenteredCalendarMonthStyle</item>

    </style>
    <style name="CenteredCalendarMonthStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="CenteredSelectionStyle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/black</item>

        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>

        <item name="android:textSize">16sp</item>
    </style>

    <style name="ShapeAppearance.MyApp.SquareComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Custom_MaterialCalendar_Range" parent="@style/Widget.MaterialComponents.MaterialCalendar.Fullscreen">
        <item name="rangeFillColor">@color/red_light_range</item>
        <item name="daySelectedStyle">@style/CustomSelected</item>
        <item name="dayTodayStyle">@style/CustomeDayToday</item>
    </style>

    <style name= "CustomSelected" parent="Widget.MaterialComponents.MaterialCalendar.Day.Selected">
        <item name="itemFillColor">@color/red</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemShapeAppearanceOverlay">@style/ShapeAppearance.MyApp.SquareComponent</item>
    </style>

    <style name="CustomDayDisabled" parent="Widget.MaterialComponents.MaterialCalendar.Day">
        <item name="itemTextColor">#33000000</item>
    </style>
    
    <style name="CustomeDayToday" parent="Widget.MaterialComponents.MaterialCalendar.Day.Today">
        <item name="itemTextColor">@color/red</item>
        <item name="itemStrokeColor">@color/red</item>
        <item name="itemShapeAppearanceOverlay">@style/ShapeAppearance.MyApp.SquareComponent</item>
    </style>
    <style name="CenteredHeaderTitleStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>